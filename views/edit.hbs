<h1>Edit Post</h1>
<form action="/posts/{{_id}}/?_method=put" method="post" accept-charset="utf-8">
    <p>
        <label for="title">Title</label>
        <input type="text" id="title" name="title" value="{{title}}">
    </p>
    <p>
        <label for="author">By</label>
        <input type="text" id="title" name="title" value="{{author}}">
    </p>
    <p>
        <label for="date">Date</label>
        <input type="text" name="date" value="{{date}}">

    </p>
    <p>
        <label for="post">Post</label>

    </p>
    <p>
        <textarea rows="25" cols="100" type="text" value="{{post}}" name="post" id="post"></textarea>
    </p>
    <input type="submit" value="Update">

</form>